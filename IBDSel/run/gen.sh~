    sed -e "s/RUNNUM/${runNum}/g" \
        -e "s/SITE/EH2/g"   $targetdir/job_temp.csh > $targetdir/P12C/RpcBad/EH2/job_${runNum}.csh
    echo "qsub -q dyb64q job_${runNum}.csh" >> $targetdir/P12C/RpcBad/EH2/submit.sh
done
popd

#EH3
#filedir="/publicfs/dyb/data/rec/P12B/good_files_3sites_Feb17_May11_2012_v1/EH3"
#filedir="/dybfs/rec/P12C/GoodRun-part2-v0/EH3"
